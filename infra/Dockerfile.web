# Multi-stage Dockerfile for VANTAGE AI Web Frontend with Quick Actions
FROM node:18-alpine as base

# Set working directory
WORKDIR /app

# Install system dependencies for Quick Actions testing
RUN apk add --no-cache curl

# Copy package files from web directory
COPY web/package*.json ./

# Development stage
FROM base as development

# Install dependencies including testing tools
RUN npm ci

# Copy source code from web directory
COPY web/ .

# Create non-root user
RUN addgroup -g 1001 -S nodejs && adduser -S nextjs -u 1001
RUN chown -R nextjs:nodejs /app
USER nextjs

# Expose port
EXPOSE 3000

# Health check for Quick Actions
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:3000/api/health || exit 1

# Default command
CMD ["npm", "run", "dev"]

# Production stage
FROM base as production

# Install dependencies with Quick Actions support
RUN npm ci --only=production && npm cache clean --force

# Copy source code from web directory
COPY web/ .

# Build the application with Quick Actions optimization
RUN npm run build

# Create non-root user
RUN addgroup -g 1001 -S nodejs && adduser -S nextjs -u 1001
RUN chown -R nextjs:nodejs /app
USER nextjs

# Expose port
EXPOSE 3000

# Health check for Quick Actions functionality
HEALTHCHECK --interval=30s --timeout=10s --start-period=5s --retries=3 \
    CMD curl -f http://localhost:3000/api/health || exit 1

# Default command
CMD ["npm", "start"]