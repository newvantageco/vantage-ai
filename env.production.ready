# =============================================================================
# VANTAGE AI - PRODUCTION Environment Configuration
# =============================================================================
# This file contains production environment variables
# CRITICAL: Fill in all required values before deployment
# Copy this to .env in production

# =============================================================================
# SYSTEM CONFIGURATION
# =============================================================================
ENVIRONMENT=production
DEBUG=false
DRY_RUN=false

# =============================================================================
# DATABASE CONFIGURATION (REQUIRED)
# =============================================================================
POSTGRES_USER=vantage_prod_user
POSTGRES_PASSWORD=CHANGE_ME_SECURE_PASSWORD
POSTGRES_DB=vantage_production
DATABASE_URL=postgresql+psycopg://vantage_prod_user:CHANGE_ME_SECURE_PASSWORD@db:5432/vantage_production

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# SECURITY & AUTHENTICATION (REQUIRED)
# =============================================================================
# Generate a secure secret key (32+ characters) - CRITICAL!
SECRET_KEY=CHANGE_ME_SECURE_SECRET_KEY_32_CHARS_MINIMUM

# Clerk Authentication (get from https://dashboard.clerk.com)
CLERK_SECRET_KEY=sk_live_YOUR_PRODUCTION_CLERK_SECRET_KEY
CLERK_PUBLISHABLE_KEY=pk_live_YOUR_PRODUCTION_CLERK_PUBLISHABLE_KEY

# =============================================================================
# CORS CONFIGURATION (REQUIRED FOR PRODUCTION)
# =============================================================================
# Only include your actual production domains - NO WILDCARDS!
CORS_ORIGINS=https://yourdomain.com,https://app.yourdomain.com
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
CORS_HEADERS=Content-Type,Authorization,X-Requested-With,Accept,Origin

# =============================================================================
# AI PROVIDER CONFIGURATION (REQUIRED)
# =============================================================================
# OpenAI API Key (get from https://platform.openai.com/api-keys)
OPENAI_API_KEY=sk-YOUR_PRODUCTION_OPENAI_API_KEY

# Anthropic API Key (get from https://console.anthropic.com/)
ANTHROPIC_API_KEY=sk-ant-YOUR_PRODUCTION_ANTHROPIC_API_KEY

# =============================================================================
# SOCIAL MEDIA PLATFORM INTEGRATIONS (REQUIRED FOR FUNCTIONALITY)
# =============================================================================
# Meta/Facebook Integration (get from https://developers.facebook.com/apps/)
META_APP_ID=YOUR_PRODUCTION_META_APP_ID
META_APP_SECRET=YOUR_PRODUCTION_META_APP_SECRET
META_REDIRECT_URI=https://yourdomain.com/oauth/meta/callback
META_PAGE_ID=YOUR_PRODUCTION_FACEBOOK_PAGE_ID
META_IG_BUSINESS_ID=YOUR_PRODUCTION_INSTAGRAM_BUSINESS_ID

# LinkedIn Integration (get from https://www.linkedin.com/developers/apps)
LINKEDIN_CLIENT_ID=YOUR_PRODUCTION_LINKEDIN_CLIENT_ID
LINKEDIN_CLIENT_SECRET=YOUR_PRODUCTION_LINKEDIN_CLIENT_SECRET
LINKEDIN_REDIRECT_URL=https://yourdomain.com/oauth/linkedin/callback
LINKEDIN_PAGE_URN=urn:li:organization:YOUR_PRODUCTION_ORGANIZATION_ID

# =============================================================================
# STRIPE BILLING CONFIGURATION (REQUIRED FOR BILLING)
# =============================================================================
# Stripe API Keys (get from https://dashboard.stripe.com/apikeys)
STRIPE_SECRET_KEY=sk_live_YOUR_PRODUCTION_STRIPE_SECRET_KEY
STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_PRODUCTION_STRIPE_PUBLISHABLE_KEY
STRIPE_WEBHOOK_SECRET=whsec_YOUR_PRODUCTION_WEBHOOK_SECRET

# Stripe Price IDs (get from Stripe dashboard)
STRIPE_PRICE_STARTER=price_YOUR_STARTER_PLAN_ID
STRIPE_PRICE_GROWTH=price_YOUR_GROWTH_PLAN_ID
STRIPE_PRICE_PRO=price_YOUR_PRO_PLAN_ID

# =============================================================================
# SECURITY & RATE LIMITING
# =============================================================================
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=100
RATE_LIMIT_BURST_LIMIT=200
SECURITY_HEADERS_ENABLED=true

# =============================================================================
# FRONTEND CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_URL=https://api.yourdomain.com
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_live_YOUR_PRODUCTION_CLERK_PUBLISHABLE_KEY
NEXT_PUBLIC_STRIPE_PUBLISHABLE_KEY=pk_live_YOUR_PRODUCTION_STRIPE_PUBLISHABLE_KEY
NEXT_PUBLIC_DEV_MODE=false
NODE_ENV=production

# =============================================================================
# MONITORING & OBSERVABILITY (OPTIONAL BUT RECOMMENDED)
# =============================================================================
OTEL_SERVICE_NAME=vantage-ai-production
ENABLE_PROMETHEUS_METRICS=true
# OTEL_EXPORTER_OTLP_ENDPOINT=https://your-observability-endpoint.com

# =============================================================================
# DOCKER & DEPLOYMENT PORTS
# =============================================================================
API_PORT=8000
WEB_PORT=3000
POSTGRES_PORT=5432
REDIS_PORT=6379

# =============================================================================
# FEATURE FLAGS (PRODUCTION SETTINGS)
# =============================================================================
AUTOMATIONS_ENABLED=true
FEATURE_FAKE_INSIGHTS=false
E2E_MOCKS=false
DEV_TOOLS_ENABLED=false
