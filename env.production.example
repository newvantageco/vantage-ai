# =============================================================================
# VANTAGE AI - PRODUCTION Environment Configuration
# =============================================================================
# Copy this file to .env.production and fill in your actual production values
# NEVER commit .env files with real secrets to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql+psycopg://username:password@your-production-db-host:5432/vantage_ai

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://your-production-redis-host:6379

# =============================================================================
# AUTHENTICATION (Clerk)
# =============================================================================
CLERK_JWKS_URL=https://your-production-clerk-domain.clerk.accounts.dev/.well-known/jwks.json
CLERK_ISSUER=https://your-production-clerk-domain.clerk.accounts.dev

# =============================================================================
# SECURITY & GENERAL CONFIGURATION
# =============================================================================
# Generate a secure secret key (32+ characters)
SECRET_KEY=your-production-secret-key-change-this-must-be-32-bytes-minimum

# CORS Configuration (Cross-Origin Resource Sharing)
# CRITICAL: Only include your actual production domain(s)
# Example: CORS_ORIGINS=https://app.yourdomain.com,https://www.yourdomain.com
CORS_ORIGINS=https://your-production-domain.com
# Limit methods to what you actually need
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS  
# Limit headers to what you actually need
CORS_HEADERS=Content-Type,Authorization,X-Requested-With,Accept,Origin

# Production mode settings - CRITICAL: Set these to false/production values
DRY_RUN=false
DEBUG=false
ENVIRONMENT=production

# =============================================================================
# API CONFIGURATION  
# =============================================================================
API_BASE=https://api.your-production-domain.com/api/v1

# =============================================================================
# WEB CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_BASE=https://api.your-production-domain.com/api/v1

# =============================================================================
# STRIPE BILLING CONFIGURATION - PRODUCTION
# =============================================================================
STRIPE_SECRET_KEY=sk_live_your_live_stripe_secret_key_here
STRIPE_WEBHOOK_SECRET=whsec_your_live_webhook_secret_here
# CRITICAL: Set to false for live payments
STRIPE_DRY_RUN=false

# Production Stripe Price IDs
STRIPE_PRICE_STARTER=price_live_starter_monthly_id_here
STRIPE_PRICE_GROWTH=price_live_growth_monthly_id_here
STRIPE_PRICE_PRO=price_live_pro_monthly_id_here

# =============================================================================
# META/FACEBOOK INTEGRATION - PRODUCTION
# =============================================================================
META_APP_ID=your_production_meta_app_id_here
META_APP_SECRET=your_production_meta_app_secret_here
META_REDIRECT_URI=https://your-production-domain.com/oauth/meta/callback
META_GRAPH_VERSION=20.0
META_PAGE_ID=your_production_facebook_page_id_here
META_IG_BUSINESS_ID=your_production_instagram_business_id_here

# =============================================================================
# LINKEDIN INTEGRATION - PRODUCTION
# =============================================================================
LINKEDIN_CLIENT_ID=your_production_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_production_linkedin_client_secret_here
LINKEDIN_REDIRECT_URL=https://your-production-domain.com/oauth/linkedin/callback
LINKEDIN_PAGE_URN=urn:li:organization:your_production_organization_id_here

# =============================================================================
# AI MODEL CONFIGURATION - PRODUCTION
# =============================================================================
OPENAI_API_KEY=your_production_openai_api_key_here
MODEL_ROUTER_PRIMARY=openai:gpt-4o-mini
MODEL_ROUTER_FALLBACK=openai:gpt-3.5-turbo

# =============================================================================
# AUTOMATION & RULES CONFIGURATION - PRODUCTION
# =============================================================================
AUTOMATIONS_ENABLED=true
RULES_WORKER_INTERVAL_MINUTES=5
RULES_COOLDOWN_MINUTES=60
MAX_BUDGET_PCT_CHANGE=15

# =============================================================================
# PRODUCTION MONITORING & PERFORMANCE
# =============================================================================
# Disable development features
FEATURE_FAKE_INSIGHTS=false
E2E_MOCKS=false
DEV_TOOLS_ENABLED=false

# Production cache settings
AI_CACHE_TTL_SECS=86400  # 24 hours

# Rate limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS_PER_MINUTE=300  # Higher limit for production
RATE_LIMIT_BURST=500

# AI Budget controls
AI_BUDGET_SOFT_LIMIT_MULTIPLIER=1.5  # More restrictive in production
