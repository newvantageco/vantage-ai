# =============================================================================
# VANTAGE AI - Environment Configuration
# =============================================================================
# Copy this file to .env and fill in your actual values
# NEVER commit .env files with real secrets to version control

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DATABASE_URL=postgresql+psycopg://dev:dev@db:5432/vantage

# =============================================================================
# REDIS CONFIGURATION
# =============================================================================
REDIS_URL=redis://redis:6379/0

# =============================================================================
# AUTHENTICATION (Clerk)
# =============================================================================
# Get these from your Clerk dashboard: https://dashboard.clerk.com
CLERK_SECRET_KEY=
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=

# =============================================================================
# META/FACEBOOK INTEGRATION
# =============================================================================
# Create a Meta App at: https://developers.facebook.com/apps/
# See infra/readme.md for detailed setup instructions
META_APP_ID=your_meta_app_id_here
META_APP_SECRET=your_meta_app_secret_here
META_REDIRECT_URI=https://your-domain.com/oauth/meta/callback
META_GRAPH_VERSION=20.0
META_PAGE_ID=your_facebook_page_id_here
META_IG_BUSINESS_ID=your_instagram_business_id_here

# =============================================================================
# LINKEDIN INTEGRATION
# =============================================================================
# Create a LinkedIn App at: https://www.linkedin.com/developers/apps
# See infra/readme.md for detailed setup instructions
LINKEDIN_CLIENT_ID=your_linkedin_client_id_here
LINKEDIN_CLIENT_SECRET=your_linkedin_client_secret_here
LINKEDIN_REDIRECT_URL=https://your-domain.com/oauth/linkedin/callback
LINKEDIN_PAGE_URN=urn:li:organization:your_organization_id_here

# =============================================================================
# AI MODEL CONFIGURATION
# =============================================================================
# OpenAI API Key (get from: https://platform.openai.com/api-keys)
OPENAI_API_KEY=

# Anthropic API Key (get from: https://console.anthropic.com/)
ANTHROPIC_API_KEY=

# Cohere API Key (get from: https://dashboard.cohere.ai/)
COHERE_API_KEY=

# Model router configuration
MODEL_ROUTER_PRIMARY=openai:gpt-4o-mini
MODEL_ROUTER_FALLBACK=openai:gpt-4o-mini  # change to ollama if running

# Alternative model configuration (if not using OpenAI)
MODEL_MODE=hosted
HOSTED_MODEL_NAME=gpt-4o-mini
OPEN_MODEL_ENDPOINT=
OPEN_MODEL_API_KEY=

# =============================================================================
# SECURITY & GENERAL CONFIGURATION
# =============================================================================
# Generate a secure secret key (32+ characters) - CRITICAL: Change this in production!
SECRET_KEY=your-secure-secret-key-32-chars-minimum

# CORS Configuration (Cross-Origin Resource Sharing)
# Comma-separated list of allowed origins for API access
# Development: Include localhost origins for local development
# Production: Only include your production domain(s) - NO WILDCARDS!
CORS_ORIGINS=http://localhost:3000,http://localhost:3001
# Allowed HTTP methods (recommended: limit to what you actually need)
CORS_METHODS=GET,POST,PUT,DELETE,PATCH,OPTIONS
# Allowed HTTP headers (recommended: limit to what you actually need)
CORS_HEADERS=Content-Type,Authorization,X-Requested-With,Accept,Origin

# Development mode settings
DRY_RUN=true
DEBUG=true

# =============================================================================
# API CONFIGURATION
# =============================================================================
API_BASE=http://localhost:8000/api/v1

# =============================================================================
# TELEMETRY & OBSERVABILITY
# =============================================================================
# Disable telemetry for development (set to 0 for production)
DISABLE_TELEMETRY=1

# OpenTelemetry service name
OTEL_SERVICE_NAME=vantage-api

# OTLP endpoint for traces (optional)
# OTEL_EXPORTER_OTLP_ENDPOINT=http://otel-collector:4318

# Enable Prometheus metrics (set to 1 to enable)
ENABLE_PROMETHEUS_METRICS=0

# =============================================================================
# STRIPE BILLING CONFIGURATION
# =============================================================================
# Get these from your Stripe dashboard: https://dashboard.stripe.com
STRIPE_SECRET_KEY=
STRIPE_WEBHOOK_SECRET=

# Stripe Price IDs for each plan (get from Stripe dashboard)
STRIPE_PRICE_STARTER=price_starter_monthly_id_here
STRIPE_PRICE_GROWTH=price_growth_monthly_id_here
STRIPE_PRICE_PRO=price_pro_monthly_id_here

# Enable dry-run mode for testing (no actual Stripe API calls)
STRIPE_DRY_RUN=true

# =============================================================================
# AUTOMATION & RULES CONFIGURATION
# =============================================================================
# Feature flag for rules automation system
AUTOMATIONS_ENABLED=false

# Rules worker configuration
RULES_WORKER_INTERVAL_MINUTES=5
RULES_COOLDOWN_MINUTES=60
MAX_BUDGET_PCT_CHANGE=15

# =============================================================================
# BRAVE SEARCH API CONFIGURATION
# =============================================================================
# Get your API key from: https://search.brave.com/help/api
BRAVE_API_KEY=your_brave_api_key_here

# =============================================================================
# WHATSAPP BUSINESS API
# =============================================================================
# Get these from Meta Business: https://business.facebook.com/
WHATSAPP_BUSINESS_TOKEN=
WHATSAPP_VERIFY_TOKEN=

# =============================================================================
# WEB CONFIGURATION
# =============================================================================
NEXT_PUBLIC_API_BASE=http://localhost:8000/api/v1
